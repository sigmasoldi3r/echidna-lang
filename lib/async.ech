--[[
  Futures are resolvables that might complete at any particular time.
]]
export class Future(let context) {
  def next(cb) {}
  def catch(cb) {}
  def await() {

  }
}

--[[
  Execution context.
]]
export class Context(let co) {
  def future() = new Future(self)
  def step() = coroutine.resume(self.co)
}

--[[
  Async blocks will return a future that might been resolved once the last part
  of the coroutine yields and returns.
]]
export def async(block) {
  let context = new Context()
  context.co = coroutine.create {
    it(context)
  }
  coroutine.resume(context.co, block)
}
